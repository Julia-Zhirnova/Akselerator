<Window x:Class="УМК_Цифра.Bye"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УМК_Цифра"
        mc:Ignorable="d"
        Title="Exit" MinHeight="600" MinWidth="900" Height="600" Width="900"
        d:DesignHeight="600" d:DesignWidth="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <MediaElement HorizontalAlignment="Right" Grid.Column ="1" x:Name="myGif" MediaEnded="myGif_MediaEnded" UnloadedBehavior="Manual"  Source="Resources/пока.mp4"/>

        <TextBlock Style="{StaticResource Explanation}" Text="Производство приобретенных знаний без Вас встало! Вы набрали 0 баллов">
                <TextBlock.Background>
                    <!--Настройки градиента-->
                    <RadialGradientBrush RadiusX="1" RadiusY="1" >
                        <GradientStop Color="White" Offset="0.313" />
                        <GradientStop Color="#FFC3BDBD" Offset="1" />
                    </RadialGradientBrush>
                </TextBlock.Background>
            </TextBlock>
    </Grid>
</Window>
